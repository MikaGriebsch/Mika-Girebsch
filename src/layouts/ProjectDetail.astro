---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE } from '../consts';

type Props = CollectionEntry<'projects'>['data'];

const { title, description, heroImage, websiteUrl, linkType, year, tags, extraImage } = Astro.props;
---

<html lang="de">
<head>
    <BaseHead title={`${title} - ${SITE_TITLE}`} description={description} />
</head>
<body>
    <Header />
    <main class="project-detail">
        <div class="container">
            <!-- Hero Section -->
            <div class="hero-section">
                <h1 class="project-title outlined-text">{title}</h1>
                <div class="project-meta">
                    <span class="year-badge">{year}</span>
                    <a href={websiteUrl} target="_blank" class="website-link">
                        {linkType === 'github' ? 'Repository ansehen →' : 'Website besuchen →'}
                    </a>
                </div>
            </div>

            <!-- Hero Image -->
            <div class="hero-image-container">
                <img src={heroImage} alt={title} class="hero-image" />
                <div class="image-overlay">
                    <a href={websiteUrl} target="_blank" class="overlay-link">
                        {linkType === 'github' ? 'Code ansehen' : 'Live ansehen'}
                    </a>
                </div>
            </div>

            <!-- Tags -->
            <div class="tags-container">
                {tags.map((tag) => (
                    <span class="tag">{tag}</span>
                ))}
            </div>

            <!-- Content -->
            <article class="project-content">
                <slot />
            </article>

            <!-- Extra Image Section -->
            {extraImage && (
                <div class="extra-image-section">
                    <h3>Weitere Einblicke</h3>
                    <img src={extraImage} alt="Zusätzliches Bild zum Projekt" class="extra-image" />
                </div>
            )}

            <!-- Call to Action -->
            <div class="cta-section">
                <h3>Projekt erkunden</h3>
                <p>{linkType === 'github' ? 'Schaue dir den Code an und erfahre mehr über die Implementierung:' : 'Besuche die Website und erlebe das Projekt selbst:'}</p>
                <a href={websiteUrl} target="_blank" class="cta-button">
                    {linkType === 'github' ? `${title} Code ansehen` : `${title} besuchen`}
                </a>
            </div>

            <!-- Back Navigation -->
            <div class="back-to-home">
                <a href="/projects">
                    <button class="back-button">
                        <span class="circle" aria-hidden="true">
                        <span class="icon arrow"></span>
                        </span>
                        <span class="button-text">Zurück zu den Projekten</span>
                    </button>
                </a>
            </div>
        </div>
    </main>
    <Footer />
</body>

<style>
    .back-to-home {
        text-align: center;
        margin-top: 3rem;
        display: flex;
        justify-content: center;
    }

    .back-to-home a {
        text-decoration: none;
    }
    
    button {
        position: relative;
        display: inline-block;
        cursor: pointer;
        outline: none;
        border: 0;
        vertical-align: middle;
        text-decoration: none;
        background: transparent;
        padding: 0;
        font-size: inherit;
        font-family: inherit;
    }

    button.back-button {
        width: 24rem;
        height: auto;
    }

    button.back-button .circle {
        transition: all 0.45s cubic-bezier(0.65, 0, 0.076, 1);
        position: relative;
        display: block;
        margin: 0;
        margin-left: auto;
        width: 3rem;
        height: 3rem;
        background: #000000;
        border-radius: 1.625rem;
    }

    button.back-button .circle .icon {
        transition: all 0.45s cubic-bezier(0.65, 0, 0.076, 1);
        position: absolute;
        top: 0;
        bottom: 0;
        margin: auto;
        background: #fff;
    }

    button.back-button .circle .icon.arrow {
        transition: all 0.45s cubic-bezier(0.65, 0, 0.076, 1);
        right: 0.625rem;
        width: 1.125rem;
        height: 0.125rem;
        background: none;
    }

    button.back-button .circle .icon.arrow::before {
        position: absolute;
        content: "";
        top: -0.29rem;
        left: 0.0625rem;
        width: 0.625rem;
        height: 0.625rem;
        border-top: 0.125rem solid #fff;
        border-left: 0.125rem solid #fff;
        transform: rotate(-45deg);
    }

    button.back-button .button-text {
        transition: all 0.45s cubic-bezier(0.65, 0, 0.076, 1);
        position: absolute;
        top: 0;
        left: 0;
        right: 3.5rem;
        bottom: 0;
        margin: 0;
        color: #282936;
        font-weight: 700;
        line-height: 1.6;
        text-transform: uppercase;
        white-space: nowrap;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    button:hover .circle {
        width: 100%;
    }

    button:hover .circle .icon.arrow {
        background: #fff;
        transform: translate(-1rem, 0);
    }

    button:hover .button-text {
        color: #ffffff !important;
    }
    
    a:hover button .button-text {
        color: #ffffff !important;
    }
    
    .back-to-home a:hover .button-text {
        color: #ffffff !important;
    }

    .back-link {
        color: var(--font);
        text-decoration: none;
        font-weight: 500;
        padding: 0.75rem 1.5rem;
        border: 2px solid var(--accent-background-2);
        border-radius: 8px;
        transition: all 0.3s ease;
    }

    .back-link:hover {
        background-color: var(--font);
        color: white;
        border-color: var(--font);
    }
    .project-detail {
        min-height: 100vh;
        padding: 2rem 0;
    }

    .container {
        max-width: 900px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    .hero-section {
        text-align: center;
        margin-bottom: 3rem;
    }

    .project-title {
        font-size: 3.5rem;
        margin-bottom: 1rem;
        color: transparent;
        font-weight: 600;
        position: relative;
        display: inline;
        text-shadow: 
            -1px -1px 0 var(--font),  
            1px -1px 0 var(--font),
            -1px 1px 0 var(--font),
            1px 1px 0 var(--font);
        transition: color 0.3s ease;
    }

    .project-title:hover {
        color: white;
        text-shadow: 
            -5px -5px 0 var(--font),  
            1px -1px 0 var(--font),
            -1px 1px 0 var(--font),
            1px 1px 0 var(--font);
    }

    .project-meta {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 2rem;
        margin-bottom: 2rem;
    }

    .year-badge {
        background-color: var(--accent-background-2);
        padding: 0.5rem 1rem;
        border-radius: 12px;
        font-weight: bold;
    }

    .website-link {
        color: var(--font);
        text-decoration: none;
        font-weight: bold;
        border: 2px solid var(--font);
        padding: 0.5rem 1rem;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

    .website-link:hover {
        background-color: var(--font);
        color: white;
    }

    .hero-image-container {
        position: relative;
        margin-bottom: 2rem;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    }

    .hero-image {
        width: 100%;
        height: auto;
        display: block;
        transition: transform 0.3s ease;
    }

    .image-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.5);
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .hero-image-container:hover .image-overlay {
        opacity: 1;
    }

    .hero-image-container:hover .hero-image {
        transform: scale(1.05);
    }

    .overlay-link {
        color: white;
        text-decoration: none;
        font-weight: bold;
        font-size: 1.2rem;
        border: 2px solid white;
        padding: 1rem 2rem;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

    .overlay-link:hover {
        background-color: white;
        color: black;
    }

    .tags-container {
        display: flex;
        gap: 0.5rem;
        justify-content: center;
        margin-bottom: 3rem;
        flex-wrap: wrap;
    }

    .tag {
        background-color: var(--accent-background);
        color: var(--font);
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-size: 0.9rem;
        font-weight: 500;
    }

    .project-content {
        line-height: 1.8;
        margin-bottom: 3rem;
    }

    .project-content h1 {
        color: transparent;
        border-bottom: 2px solid var(--accent-background-2);
        padding-bottom: 0.5rem;
        margin-bottom: 1.5rem;
        position: relative;
        display: inline-block;
        text-shadow: 
            -1px -1px 0 var(--font),  
            1px -1px 0 var(--font),
            -1px 1px 0 var(--font),
            1px 1px 0 var(--font);
        transition: color 0.3s ease, text-shadow 0.3s ease;
        width: 100%;
    }

    .project-content h1:hover {
        color: white;
        text-shadow: 
            -1px -1px 0 var(--font),  
            1px -1px 0 var(--font),
            -1px 1px 0 var(--font),
            1px 1px 0 var(--font),
            -5px -5px 0 var(--font);
    }

    .project-content h2 {
        color: transparent;
        margin-top: 2rem;
        margin-bottom: 1rem;
        font-size: 1.5rem;
        position: relative;
        display: inline-block;
        text-shadow: 
            -1px -1px 0 var(--font),  
            1px -1px 0 var(--font),
            -1px 1px 0 var(--font),
            1px 1px 0 var(--font);
        transition: color 0.3s ease, text-shadow 0.3s ease;
    }

    .project-content h2:hover {
        color: white;
        text-shadow: 
            -1px -1px 0 var(--font),  
            1px -1px 0 var(--font),
            -1px 1px 0 var(--font),
            1px 1px 0 var(--font),
            -5px -5px 0 var(--font);
    }

    .project-content h3 {
        color: transparent;
        margin-top: 1.5rem;
        margin-bottom: 0.8rem;
        font-size: 1.3rem;
        position: relative;
        display: inline-block;
        text-shadow: 
            -1px -1px 0 var(--font),  
            1px -1px 0 var(--font),
            -1px 1px 0 var(--font),
            1px 1px 0 var(--font);
        transition: color 0.3s ease, text-shadow 0.3s ease;
    }

    .project-content h3:hover {
        color: white;
        text-shadow: 
            -1px -1px 0 var(--font),  
            1px -1px 0 var(--font),
            -1px 1px 0 var(--font),
            1px 1px 0 var(--font),
            -5px -5px 0 var(--font);
    }

    .project-content p {
        margin-bottom: 1.2rem;
        text-align: justify;
    }

    .project-content ul, .project-content ol {
        margin-left: 1.5rem;
        margin-bottom: 1.2rem;
    }

    .project-content li {
        margin-bottom: 0.5rem;
    }

    .extra-image-section {
        margin-bottom: 3rem;
        text-align: center;
    }

    .extra-image-section h3 {
        margin-bottom: 1.5rem;
        color: var(--font);
    }

    .extra-image {
        max-width: 100%;
        border-radius: 12px;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
    }

    .cta-section {
        background-color: var(--accent-background);
        padding: 2rem;
        border-radius: 12px;
        text-align: center;
        margin-bottom: 3rem;
    }

    .cta-section h3 {
        color: var(--font);
        margin-bottom: 1rem;
    }

    .cta-section p {
        margin-bottom: 1.5rem;
        color: var(--font);
    }

    .cta-button {
        display: inline-block;
        background-color: var(--font);
        color: white;
        padding: 1rem 2rem;
        text-decoration: none;
        border-radius: 8px;
        font-weight: bold;
        transition: transform 0.3s ease;
    }

    .cta-button:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.2);
    }

    .back-navigation {
        text-align: center;
    }

    .back-link {
        color: var(--font);
        text-decoration: none;
        font-weight: 500;
        padding: 0.5rem 1rem;
        border-radius: 8px;
        transition: background-color 0.3s ease;
    }

    .back-link:hover {
        background-color: var(--accent-background);
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .project-title {
            font-size: 2.5rem;
        }

        .project-meta {
            flex-direction: column;
            gap: 1rem;
        }

        .container {
            padding: 0 1rem;
        }

        .tags-container {
            justify-content: center;
        }
    }

    @media (max-width: 480px) {
        .project-title {
            font-size: 2rem;
        }

        .cta-section {
            padding: 1.5rem;
        }
    }
</style>
</html>
