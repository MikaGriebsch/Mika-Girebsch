---
import { getCollection, type CollectionEntry } from 'astro:content';
import Layout from '../layouts/BlogPost.astro';

// Get the about-me content
const aboutEntries = await getCollection('about');
const aboutMe = aboutEntries.find(entry => entry.slug === 'about-me');

if (!aboutMe) {
  throw new Error('About me content not found');
}

const { Content } = await aboutMe.render();
---

<Layout
	title={aboutMe.data.title}
	description={aboutMe.data.description}
	heroImage={aboutMe.data.heroImage}
>
	<Content />
</Layout>
